<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.or.nextit.spring_project.board.BoardMapper">

<!--등록 -->
    <insert id="insertSelectKey">
        <selectKey keyProperty="no" order="BEFORE" resultType="int">
            SELECT board_seq.nextval FROM BLOG_BOARD
        </selectKey>
        INSERT INTO
        BLOG_BOARD
        (no, title, content, writer)
        VALUES
        (#{no}, #{title}, #{content}, #{writer} )
    </insert>

<!--조회-->

    <select id="getList" resultType="boardVO">
        <![CDATA[
            select * from BLOG_BOARD where no > 0
        ]]>
    </select>


    <select id="read" resultType="boardVO">
        select * from BLOG_BOARD where no = #{no}
    </select>


    <delete id="delete">
        delete from BLOG_BOARD where no = #{no}
    </delete>

    <update id="update">
        update BLOG_BOARD
        SET
        title = #{title}
        content = #{content}
        writer = #{writer}
        WHERE no = #{no}
    </update>

</mapper>
